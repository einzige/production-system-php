<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.7" method="upgrade">
    <name>production_system</name>
    <author>Anton Goroshkin</author>
    <creationDate>January 2011</creationDate>
    <copyright>(C) 2011 - 2012 Siberian aerospace university. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later.</license>
    <authorEmail>antichaos@gmail.com</authorEmail>
    <authorUrl>antichaos.narod.ru</authorUrl>
    <version>1.7.0</version>
    <description>Provides to build complex datasets using production rules.</description>
    <files folder="site">
        <filename>index.html</filename>
        <filename>production_system.php</filename>
        <folder>assets</folder>
        <folder>controllers</folder>
        <folder>models</folder>
        <folder>helpers</folder>
        <folder>views</folder>
    </files>
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <administration>
        <files folder="admin">
            <filename>index.html</filename>
            <filename>production_system.php</filename>
            <folder>assets</folder>
            <folder>controllers</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>helpers</folder>
            <folder>views</folder>
            <folder>sql</folder>
        </files>
        <submenu>
            <menu link="option=com_production_system&amp;controller=rules">Show the entire system including all rules.</menu>
            <menu link="option=com_production_system&amp;task=add&amp;controller=rules">Create rule.</menu>
            <menu link="option=com_production_system&amp;task=add&amp;controller=signs">Create sign.</menu>
        </submenu>
    </administration>
    <params>
        <param name="results_limit" type="number" label="Results limit:" description="Results number to be displayed on the page." />
    </params>
</extension>